---
import "../styles/posts.scss";
import 'animate.css';

import Layout from '../layouts/BaseLayout.astro';
import SBlogPost from "../components/SBlogPost.astro";
import BBlogPost from "../components/BBlogPost.astro";

const allPosts = await Astro.glob("../pages/posts/*.md");
const bigPosts = allPosts.filter((post) => post.frontmatter.type === "big");
const tinyPosts = allPosts.filter((post) => post.frontmatter.type === "tiny");

---

<Layout title="Posts">
	<main class="container">
        <div class="banner animate__animated animate__fadeIn">
            <h1>Posts</h1>
        </div>
       <!-- <div class="filters">
            <ul>
                <li>
                    <a id="all"><i class="fa-solid fa-filter"></i>All</a>
                </li>
                <li>
                    <a><i class="fa-solid fa-filter"></i>Cyber</a>
                </li>
                <li>
                    <a><i class="fa-solid fa-filter"></i>Programming</a>
                </li>
            </ul>
        </div> -->
        <div class="posts">
            <div class="big animate__animated animate__fadeIn animate__delay-1s">
                {bigPosts.map((post) => <BBlogPost author={post.frontmatter.author} url={post.url} title={post.frontmatter.title} image={post.frontmatter.image.url} description={post.frontmatter.description} date={post.frontmatter.pubDate.slice(0,10)} url={post.url} tag={post.frontmatter.tags[0]}/>)}
            </div>
            <div class="small-group animate__animated animate__fadeIn animate__delay-2s">
                <ul>
                    {tinyPosts.map((post) => <SBlogPost author={post.frontmatter.author} url={post.url} title={post.frontmatter.title} image={post.frontmatter.image.url} description={post.frontmatter.description} date={post.frontmatter.pubDate.slice(0,10)} url={post.url} tag={post.frontmatter.tags[0]}/>)}
                </ul>
            </div>
        </div>
	</main>
</Layout>

